<div class="row">
    <div class="col-md-offset-1 col-md-10 well shadow" style="padding:0px;margin-bottom:-4px;">
      <center>
        <h4>Member Info</h4>
      </center>
    </div>
  <div class="col-md-offset-1 col-md-10 well">
    <table class="table table-condensed">
      <thead>
        <th style="text-align:center">회원번호</th>
        <th style="text-align:center">아이디</th>
        <th style="text-align:center">게시물 수</th>
        <th style="text-align:center">댓글 수</th></th>
        <th style="text-align:center">가입일자</th>
        <th style="text-align:center" style="max-width:300px;">관리</th>
      </thead>
      <tbody>
        <% @page.each do |user| %>
          <%= render partial: "admin/user_preview", :locals => { :user => user } %>
        <% end %>
      </tbody>
    </table>
    <% (@end_page-@start_page+1).times do |i| %>
      <a href="/admin/members/<%=@start_page + i%>" class="btn btn-primary pull-left <%='disabled' if ((@start_page+i) == @pagenum)%>" style="border-radius:0;margin-left:3px;"><%=@start_page + i%></a>
    <% end %>
      <a href="/admin/user_create" class="btn btn-info pull-right" style="border-radius:0;margin-left:3px;">Create</a>
      <div style="clear:both;"></div>
  </div>
</div>

<script>
  $(document).ready(function(){
    $(".user_delete_btn").bind( "click", function(event){
      if( confirm("Really?") ){
        $.post("/admin/delete_user", { id : $(this).attr("user-id") }, function(data){
          if( data == "success")
          {
            location.reload();
          }
          else
          {
            alert( data );
          }
        });
      }
    });
    $(".user_modify_btn").bind( "click", function(event){
      location.href = "/admin/user_modify/" + $(this).attr("user-id");
    });
    
    $(".admin_user").bind( "click", function(event){
      if( confirm("Really?") ){
        $.post("/admin/user_make_normal", { id : $(this).attr("user-id") }, function(data){
          if( data == "success")
          {
            location.reload();
          }
          else
          {
            alert( data );
          }
        });
      }
    });
    $(".normal_user").bind( "click", function(event){
      if( confirm("Really?") ){
        $.post("/admin/user_make_admin", { id : $(this).attr("user-id") }, function(data){
          if( data == "success")
          {
            location.reload();
          }
          else
          {
            alert( data );
          }
        });
      }
    });
  });
</script>
<div class="row">
  <%= render :partial => "layouts/flash", :locals => {:offset => 2, :size => 8} %>
  <div class="col-md-offset-2 col-md-8 well">
    <center>
      <h3 style="font-weight:bold;">Are you sure to Delete Post#<%= @post.id %></h3>
    </center>
    <div class="col-md-12" style="padding:10px;"></div>
    <form class="col-md-offset-3 col-md-3 form-horizontal" action="/board/read/<%= params[:page_id] %>/<%= @post.id %>" method="POST">
      <button type="submit" class="btn btn-default col-md-12">Cancel</button>
    </form>
    <form class="col-md-3 form-horizontal" action="/board/delete/<%= @post.id %>?page_id=<%= params[:page_id] %>" method="POST">
      <button type="submit" class="btn btn-danger col-md-12">Delete</button>
    </form>
  </div>
</div>
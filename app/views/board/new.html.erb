<form class="col-md-offset-2 col-md-8 well form-horizontal" action="/board/create" method="POST" style="padding-bottom:5px;">
  <div class="form-group">
    <label class="col-md-2" for="title">Title</label>
    <div class="col-md-12">
      <input type="text" class="col-md-12 form-control" name="title" placeholder="제목" required>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2" for="body">Body</label>
    <div class="col-md-12">
      <textarea id="body" class="form-control post_font" name="body" row="10" placeholder="내용" style="min-height:400px;"  required></textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-12">
      <button type="submit" class="btn btn-info">등록하기</button>
    </div>
  </div>
</form>
<%= render :partial => "layouts/flash", :locals => {:offset => 3, :size => 6} %>
<div class="col-md-offset-3 col-md-6 well" style="font-size:18px;">
  <center style="margin-bottom:20px;">
    <h3>Register New Account</h3>
  </center>
  <form role="form" action="/auth/signup" method="POST">
    <div class="form-group">
      <input type="text" class="form-control" name="username" placeholder="Username" required/>
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="realname" placeholder="Realname" required/>
    </div>
    <div class="form-group">
      <input type="password" class="form-control" name="password" placeholder="Password" required/>
    </div>
    <div class="form-group" style="margin-bottom:0px;">
      <button type="submit" class="btn btn-primary" style="width:100%">Register</button>
    </div>
  </form>
</div>